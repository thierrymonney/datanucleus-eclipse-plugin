<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
    <extension-point id="urlTemplate" name="URL Template" schema="schema/urlTemplate.exsd"/>

    <extension id="projectnature" name="JPOX Project Nature" point="org.eclipse.core.resources.natures">
        <runtime>
            <run class="org.jpox.ide.eclipse.project.ProjectNature"/>
        </runtime>
        <requires-nature id="org.eclipse.jdt.core.javanature"/>
        <builder id="org.jpox.ide.eclipse.enhancerbuilder"/>
    </extension>

    <extension id="enhancerbuilder" name="JPOX Enhancer" point="org.eclipse.core.resources.builders">
        <builder hasNature="true">
            <run class="org.jpox.ide.eclipse.jobs.AutoEnhancer"/>
        </builder>
    </extension>

    <extension point="org.eclipse.core.runtime.preferences">
        <initializer class="org.jpox.ide.eclipse.preferences.PreferenceInitializer"/>
    </extension>

    <extension point="org.eclipse.ui.console.consolePatternMatchListeners">
        <consolePatternMatchListener class="org.jpox.ide.eclipse.console.EnhancedPatternMatcher"
            id="matchenhancer" qualifier=".*" regex=".*(ENHANCED|NOT ENHANCED|UNKNOWN|NOT ENHANCED).*">
            <enablement/>
        </consolePatternMatchListener>
        <consolePatternMatchListener class="org.jpox.ide.eclipse.console.JdoPatternMatcher"
            id="matchenhancer1" qualifier=".*" regex="&gt;&gt;.*">
            <enablement/>
        </consolePatternMatchListener>
    </extension>

    <extension id="org.jpox.ide.eclipse.preferences" point="org.eclipse.ui.preferencePages">
        <page class="org.jpox.ide.eclipse.preferences.GeneralPreferencePage"
            id="org.jpox.ide.eclipse.preferences.general" name="%preferencesGeneral"/>
        <page class="org.jpox.ide.eclipse.preferences.EnhancerPreferencePage" 
            category="org.jpox.ide.eclipse.preferences.general"
            id="org.jpox.ide.eclipse.preferences.enhancer" name="Enhancer"/>
        <page class="org.jpox.ide.eclipse.preferences.SchemaToolPreferencePage"
            category="org.jpox.ide.eclipse.preferences.general"
            id="org.jpox.ide.eclipse.preferences.schematool" name="SchemaTool"/>
    </extension>

    <extension id="org.jpox.ide.eclipse.properties" point="org.eclipse.ui.propertyPages">
        <page adaptable="true" class="org.jpox.ide.eclipse.preferences.GeneralPreferencePage"
            id="org.jpox.ide.eclipse.properties.general"
            name="%preferencesGeneral"
            objectClass="org.eclipse.core.resources.IProject"/>
        <page adaptable="true" class="org.jpox.ide.eclipse.preferences.EnhancerPreferencePage"
            category="org.jpox.ide.eclipse.properties.general"
            id="org.jpox.ide.eclipse.properties.enhancer"
            name="Enhancer"
            objectClass="org.eclipse.core.resources.IProject"/>
        <page adaptable="true" class="org.jpox.ide.eclipse.preferences.SchemaToolPreferencePage"
            category="org.jpox.ide.eclipse.properties.general"
            id="org.jpox.ide.eclipse.properties.schematool"
            name="SchemaTool"
            objectClass="org.eclipse.core.resources.IProject"/>
    </extension>

    <extension id="popups" name="JPOX Popups" point="org.eclipse.ui.popupMenus">
        <objectContribution objectClass="org.eclipse.jdt.core.IJavaProject"
            id="jpox-eclipse.contribution.project.menu">
            <menu label="JPOX" path="additions" id="jpox-eclipse.contribution.project.menu">
                <separator name="enhancer"/>
                <separator name="tools"/>
                <separator name="nature"/>
            </menu>
        </objectContribution>

        <objectContribution objectClass="org.eclipse.jdt.core.IJavaProject"
            id="jpox-eclipse.contribution.project.actions">
            <visibility>
                <objectState name="nature" value="org.jpox.ide.eclipse.projectnature"/>
            </visibility>
            <action label="Create persistence.xml for project"
               class="org.jpox.ide.eclipse.popup.actions.CreatePersistenceXmlAction"
               menubarPath="jpox-eclipse.contribution.project.menu/tools"
               id="jpox-eclipse.contribution.project.actions.persistencexml"/>
            <action class="org.jpox.ide.eclipse.popup.actions.AutoEnhancementAction"
               id="jpox-eclipse.contribution.project.actions.autoenhancement"
               label="%actionAutoEnhancement"
               menubarPath="jpox-eclipse.contribution.project.menu/enhancer"
               style="toggle"/>
            <action label="%actionSchemaTool"
               class="org.jpox.ide.eclipse.popup.actions.SchemaToolAction"
               menubarPath="jpox-eclipse.contribution.project.menu/tools"
               id="jpox-eclipse.contribution.project.actions.schematool"/>
            <action label="%actionEnhancerTool"
               class="org.jpox.ide.eclipse.popup.actions.EnhancerToolAction"
               menubarPath="jpox-eclipse.contribution.project.menu/tools"
               id="jpox-eclipse.contribution.project.actions.enhancertool"/>
        </objectContribution>

        <objectContribution objectClass="org.eclipse.jdt.core.IJavaProject"
            id="jpox-eclipse.contribution.project.actions.addnature">
            <visibility>
                <not>
                    <objectState name="nature" value="org.jpox.ide.eclipse.projectnature"/>
                </not>
            </visibility>
            <action class="org.jpox.ide.eclipse.popup.actions.AddNatureAction"
               id="jpox-eclipse.contribution.project.actions.addnature"
               label="%actionAddNature"
               menubarPath="jpox-eclipse.contribution.project.menu/nature"/>
        </objectContribution>

        <objectContribution id="jpox-eclipse.contribution.project.actions.removenature"
            objectClass="org.eclipse.jdt.core.IJavaProject">
            <visibility>
                <objectState name="nature" value="org.jpox.ide.eclipse.projectnature"/>
            </visibility>
            <action class="org.jpox.ide.eclipse.popup.actions.RemoveNatureAction"
               id="jpox-eclipse.contribution.project.actions.removenature"
               label="%actionRemoveNature"
               menubarPath="jpox-eclipse.contribution.project.menu/nature"/>
        </objectContribution>

        <objectContribution objectClass="org.eclipse.jdt.core.IType" 
            id="jpox-eclipse.contribution.file">
            <visibility>
                <objectState name="projectNature" value="org.jpox.ide.eclipse.projectnature"/>
            </visibility>
            <menu label="JPOX" path="additions" id="jpox-eclipse.contribution.file.menu">
                <separator name="group"/>
            </menu>
            <action label="Create Application ID Inner Class"
               class="org.jpox.ide.eclipse.popup.actions.CreateAppId"
               menubarPath="jpox-eclipse.contribution.file.menu/group"
               id="jpox-eclipse.contribution.file.actions.createinner"/>
        </objectContribution>

        <objectContribution objectClass="org.eclipse.jdt.core.ICompilationUnit"
            id="jpox-eclipse.contribution.compilation">
            <visibility>
                <objectState name="projectNature" value="org.jpox.ide.eclipse.projectnature"/>
            </visibility>
            <menu label="JPOX" id="jpox-eclipse.contribution.compilation.menu">
                <separator name="group"/>
            </menu>
            <action label="Create Application ID Inner Class"
               class="org.jpox.ide.eclipse.popup.actions.CreateAppId"
               menubarPath="jpox-eclipse.contribution.compilation.menu/group"
               id="jpox-eclipse.contribution.compilation.actions.createinner"/>
            <action label="Create JDO 2.0 Metadata File"
               class="org.jpox.ide.eclipse.popup.actions.CreateMetadataAction"
               menubarPath="jpox-eclipse.contribution.compilation.menu/group"
               id="jpox-eclipse.contribution.compilation.actions.createmetadata"/>
        </objectContribution>

        <objectContribution objectClass="org.eclipse.jdt.core.IPackageFragment"
            id="jpox-eclipse.contribution.package">
            <visibility>
                <objectState name="projectNature" value="org.jpox.ide.eclipse.projectnature"/>
            </visibility>
            <menu label="JPOX" id="jpox-eclipse.contribution.package.menu">
                <separator name="group"/>
            </menu>
            <action label="Create JDO 2.0 Metadata File"
               class="org.jpox.ide.eclipse.popup.actions.CreateMetadataAction"
               menubarPath="jpox-eclipse.contribution.package.menu/group"
               id="jpox-eclipse.contribution.package.actions.createmetadata"/>
            <action label="Create persistence.xml File"
               class="org.jpox.ide.eclipse.popup.actions.CreatePersistenceXmlAction"
               menubarPath="jpox-eclipse.contribution.package.menu/group"
               id="jpox-eclipse.contribution.package.actions.createmetadata"/>
        </objectContribution>
    </extension>

    <extension point="org.jpox.ide.eclipse.urlTemplate">
        <url-template driver-class-name="COM.ibm.db2.jdbc.net.DB2Driver"
            url-template="jdbc:db2://hostname:port/dbname"/>
        <url-template driver-class-name="COM.ibm.db2.jdbc.app.DB2Driver"
            url-template="jdbc:db2:db-name"/>
        <url-template driver-class-name="com.mysql.jdbc.Driver"
            url-template="jdbc:mysql://host:port/db-name"/>
        <url-template driver-class-name="com.microsoft.jdbc.sqlserver.SQLServerDriver"
            url-template="jdbc:microsoft:sqlserver://host:port;DatabaseName=db-name;SelectMethod=cursor"/>
        <url-template driver-class-name="oracle.jdbc.driver.OracleDriver"
            url-template="jdbc:oracle:thin:@host:port:db-name"/>
        <url-template driver-class-name="com.sybase.jdbc2.jdbc.SybDriver"
            url-template="jdbc:sybase:Tds:host:port/db-name"/>
        <url-template driver-class-name="org.hsqldb.jdbcDriver"
            url-template="jdbc:hsqldb:hsql://host:port/db-name"/>
        <url-template driver-class-name="com.mckoi.JDBCDriver"
            url-template="jdbc:mckoi://host:port/db-name"/>
        <url-template driver-class-name="org.postgresql.Driver"
            url-template="jdbc:postgresql://host:port/db-name"/>
        <url-template driver-class-name="org.apache.derby.jdbc.EmbeddedDriver"
            url-template="jdbc:derby:/path/db-name;[create=true]"/>
        <url-template driver-class-name="org.firebirdsql.jdbc.FBDriver"
            url-template="jdbc:firebirdsql://hostname/db-name"/>
        <url-template driver-class-name="org.apache.derby.jdbc.ClientDriver"
            url-template="jdbc:derby:/path/db-name;[create=true]"/>
        <url-template driver-class-name="com.microsoft.sqlserver.jdbc.SQLServerDriver"
            url-template="jdbc:sqlserver://serverName\instance:port;property=value[;property=value]"/>
        <url-template driver-class-name="com.ibm.db2.jcc.DB2Driver"
            url-template="jdbc:db2://host:port/db-name"/>
    </extension>
</plugin>